<div>
  <div class="flex justify-between items-center mb-8">
    <h1 class="font-bold text-3xl text-gray-900">Upcoming Events</h1>
    <%= link_to "Create Event", new_event_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-6 rounded-md" %>
  </div>

  <% if @events.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @events.each do |event| %>
        <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
          <div class="mb-4">
            <h3 class="text-xl font-bold text-gray-900 mb-2"><%= event.title %></h3>
            <p class="text-sm text-gray-600"><%= event.description %></p>
          </div>

          <div class="space-y-2 mb-4 text-sm text-gray-700">
            <p><strong>ğŸ“ Location:</strong> <%= event.location %></p>
            <p><strong>ğŸ“… When:</strong> <%= event.event_date.strftime("%b %d, %Y at %I:%M %p") %></p>
            <p><strong>ğŸ‘¥ Participants:</strong> <%= event.participants.count %><%= event.max_participants ? " / #{event.max_participants}" : "" %></p>
            <p><strong>ğŸ·ï¸ Category:</strong> <%= event.category %></p>
          </div>

          <div class="flex space-x-2">
            <%= link_to "View Details", event_path(event), class: "flex-1 text-center bg-gray-100 hover:bg-gray-200 text-gray-900 font-medium py-2 px-4 rounded-md" %>
            <% if event.participants.include?(current_user) %>
              <%= button_to "Leave", leave_event_path(event), method: :delete, class: "flex-1 bg-red-500 hover:bg-red-600 text-white font-medium py-2 px-4 rounded-md" %>
            <% elsif !event.full? %>
              <%= button_to "Join", join_event_path(event), method: :post, class: "flex-1 bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-md" %>
            <% else %>
              <span class="flex-1 bg-gray-400 text-white text-center font-medium py-2 px-4 rounded-md">Full</span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-gray-50 rounded-lg p-12 text-center">
      <p class="text-gray-600 text-lg mb-4">No upcoming events yet</p>
      <%= link_to "Create the First Event", new_event_path, class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-3 px-8 rounded-md inline-block" %>
    </div>
  <% end %>
</div>
