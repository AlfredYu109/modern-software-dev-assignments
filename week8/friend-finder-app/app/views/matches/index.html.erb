<div>
  <h1 class="font-bold text-3xl text-gray-900 mb-8">Your Matches</h1>

  <!-- Pending Matches -->
  <div class="mb-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-4">New Matches</h2>
    <% if @pending_matches.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @pending_matches.each do |match| %>
          <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-xl font-bold text-gray-900"><%= match.matched_user.name %></h3>
              <span class="text-sm font-medium text-green-600"><%= match.compatibility_score.to_i %>% match</span>
            </div>

            <div class="space-y-2 mb-4 text-sm text-gray-600">
              <p><strong>City:</strong> <%= match.matched_user.city %></p>
              <p><strong>Age:</strong> <%= match.matched_user.age %></p>
              <% if match.matched_user.profile %>
                <p><strong>Interests:</strong> <%= match.matched_user.profile.interests.join(', ') %></p>
                <p><strong>Vibes:</strong> <%= match.matched_user.profile.vibes.join(', ') %></p>
              <% end %>
            </div>

            <div class="flex space-x-2">
              <%= button_to "Accept", accept_match_path(match), method: :patch, class: "flex-1 bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-md" %>
              <%= button_to "Decline", reject_match_path(match), method: :patch, class: "flex-1 bg-gray-400 hover:bg-gray-500 text-white font-medium py-2 px-4 rounded-md" %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-gray-50 rounded-lg p-8 text-center">
        <p class="text-gray-600 mb-4">No new matches available</p>
        <%= button_to "Generate New Matches", api_generate_matches_path, method: :post, class: "bg-indigo-600 hover:bg-indigo-700 text-white font-medium py-2 px-6 rounded-md" %>
      </div>
    <% end %>
  </div>

  <!-- Accepted Matches -->
  <div>
    <h2 class="text-2xl font-bold text-gray-900 mb-4">Your Connections</h2>
    <% if @accepted_matches.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <% @accepted_matches.each do |match| %>
          <div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
            <div class="flex items-center justify-between mb-4">
              <h3 class="text-xl font-bold text-gray-900"><%= match.matched_user.name %></h3>
              <span class="text-sm font-medium text-green-600"><%= match.compatibility_score.to_i %>% match</span>
            </div>

            <div class="space-y-2 mb-4 text-sm text-gray-600">
              <p><strong>City:</strong> <%= match.matched_user.city %></p>
              <% if match.matched_user.profile %>
                <p><strong>Interests:</strong> <%= match.matched_user.profile.interests.join(', ') %></p>
              <% end %>
              <% if match.last_contact %>
                <p><strong>Last contact:</strong> <%= time_ago_in_words(match.last_contact) %> ago</p>
              <% end %>
            </div>

            <%= link_to "View Chat", match_path(match), class: "block w-full bg-indigo-600 hover:bg-indigo-700 text-white text-center font-medium py-2 px-4 rounded-md" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="bg-gray-50 rounded-lg p-8 text-center">
        <p class="text-gray-600">No active connections yet. Accept some match suggestions above!</p>
      </div>
    <% end %>
  </div>
</div>
